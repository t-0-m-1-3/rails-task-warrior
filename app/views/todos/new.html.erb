<h1>Create your new todo here</h1>

<%= form_with scope: :todo, url: todos_path, local: true do |f| %>
  <% if @todos.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> 
        
      </h2>
      <ul>
        <% @todos.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


    <p>
       <%= f.label :project %> 
       <%= f.text_field :project %>
    </p>

    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.label :status %>
        <%= f.text_area :status %>
    </p>


    <p>
        <%= f.label :tags %>
        <%= f.text_area :tags %>
    </p>


    <p>
        <%= f.label :urgency %>
        <%= f.text_area :urgency %>
    </p>


    <p>
        <%= f.label :priority %>
        <%= f.text_area :priority %>
    </p>


    <p>
        <%= f.label :depends %>
        <%= f.text_area :depends %>
    </p>


    <p>
        <%= f.label :due %>
        <%= f.text_area :due %>
    </p>


    <p>
        <%= f.submit 'Submit', :disable_with => 'Submiting...' %>
    </p>
    <% end %>
    <%= link_to 'Back', todos_path %>
